{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "backend-build",
			"type": "shell",
			"command": "cd backend && go build ./...",
			"group": "build"
		},
		{
			"label": "backend-test",
			"type": "shell",
			"command": "cd backend && go test ./...",
			"group": "test"
		},
		{
			"label": "frontend-install",
			"type": "shell",
			"command": "cd frontend && npm install",
			"group": "build"
		},
		{
			"label": "frontend-start",
			"type": "shell",
			"command": "cd frontend && npm run dev",
			"group": "build",
			"isBackground": true
		},
		{
			"label": "frontend-build",
			"type": "shell",
			"command": "cd frontend && npm run build",
			"group": "build"
		},
		{
			"label": "frontend-test",
			"type": "shell",
			"command": "cd frontend && npm test",
			"group": "test"
		}
	]
}
